<%include header.ejs%>
  <input type="hidden" value="<%= province %>" id="provinceData" />
    <div class="hui-banner">
      <div class="layui-carousel" id="hui_carousel">
        <div carousel-item>            
            <% for(var i in list){ %>
              <div><img src="<%= list[i].img %>" /></div>
            <% } %>
        </div>
      </div>
    </div>
    <% for(var i in title){ %>
      <% if(i%2 === 0){ %>
        <div class="home-content">
      <% }else{ %>
        <div class="home-content hui-gray-bg">
      <% } %>
        <div class="hui-container">
          <div class="home-title">
            <h2><%= title[i].h2 %></h2>
            <h5><%= title[i].h5 %></h5>
          </div>
          <% if(i==0){ %>
            <ul class="content-1">
              <% for(var j in title[i].child){ %>
                <li>
                    <div class="img-bg">
                        <img src="<%= title[i].child[j].imgs %>" class="imgs" />
                        <div class="logo align-items"><img src="<%= title[i].child[j].logo %>" /></div>
                    </div>
                    <div class="name"><%= title[i].child[j].name %></div>
                </li>
              <% } %>
            </ul>
          <% }else if(i==1){ %>
            <ul class="content-2">
              <% for(var j in title[i].child){ %>
                <li><%= title[i].child[j] %></li>
              <% } %>
            </ul>
          <% }else if(i==2){ %>
            <ul class="content-3">
              <% for(var j in title[i].child){ %>
                <li>
                  <div class="img">
                      <img src="" />
                  </div>
                  <div class="info">
                    <div class="name">很多人都不知道的装修选材诀窍</div>
                    <div class="content font-clamp3">新中式风格在设计上延续了明清时期家居配饰理念提炼其中经典元素加新中式风格在设计上延续了明清时期家居配饰理念提炼其中经典元素加以简化和丰富、提取传统家居的精华元素和生活以简化和丰富、提取传统家居的精华元素和生活</div>
                    <div class="icon-bg">
                        <i class="layui-icon layui-icon-username"><small> 12</small></i> 
                        <i class="layui-icon layui-icon-praise"><small> 12</small></i> 
                        <i class="layui-icon layui-icon-chat"><small> 12</small></i> 
                    </div>
                  </div>
                </li>
              <% } %>
            </ul>
          <% } else {%>
            <div class="content-4">
                <form class="layui-form">
              <div class="left">
                  <div class="layui-form-item">
                    <label class="layui-form-label">所在城市</label>
                    <div class="layui-input-inline" style="width: 100px;">
                      <select lay-filter="province" id="province" name="province">
                      </select>
                    </div>
                    <div class="layui-input-inline" style="width: 100px;">
                      <select lay-filter="city" id="city" name="city">
                      </select> 
                    </div>
                    <div class="layui-input-inline" style="width: 100px;">
                      <select lay-filter="area" id="area" name="area">
                      </select> 
                    </div>
                  </div>
                  <div class="layui-form-item">
                    <label class="layui-form-label">房屋面积</label>
                    <div class="layui-input-inline">
                      <input name="size" type="text" required lay-verify="required" autocomplete="off" class="layui-input">
                    </div>
                    <div class="layui-form-mid layui-word-aux">㎡</div>
                  </div>
                  <div class="layui-form-item">
                    <label class="layui-form-label">房屋户型</label>
                    <div class="layui-input-inline" style="width: 70px;">
                      <select name="room">
                        <option value="1">一室</option>
                        <option value="2">两室</option>
                        <option value="3">三室</option>
                        <option value="4">四室</option>
                        <option value="5">五室</option>
                        <option value="6">六室</option>
                      </select>
                    </div>
                    <div class="layui-input-inline" style="width: 70px;">
                      <select name="ting">
                        <option value="1">一厅</option>
                        <option value="2">两厅</option>
                        <option value="3">三厅</option>
                        <option value="4">四厅</option>
                        <option value="5">五厅</option>
                        <option value="6">六厅</option>
                      </select> 
                    </div>
                    <div class="layui-input-inline" style="width: 70px;">
                      <select name="chu">
                        <option value="1">一厨</option>
                        <option value="2">两厨</option>
                        <option value="3">三厨</option>
                      </select> 
                    </div>
                    <div class="layui-input-inline" style="width: 70px;">
                      <select name="wei">
                        <option value="1">一卫</option>
                        <option value="2">两卫</option>
                        <option value="3">三卫</option>
                        <option value="4">四卫</option>
                        <option value="5">五卫</option>
                        <option value="6">六卫</option>
                      </select> 
                    </div>
                    <div class="layui-input-inline" style="width: 100px;">
                      <select name="yangtai">
                        <option value="1">一阳台</option>
                        <option value="2">两阳台</option>
                        <option value="3">三阳台</option>
                        <option value="4">四阳台</option>
                        <option value="5">五阳台</option>
                        <option value="6">六阳台</option>
                      </select> 
                    </div>
                  </div>
                  <div class="layui-form-item">
                    <label class="layui-form-label">手机号码</label>
                    <div class="layui-input-inline">
                      <input type="text" name="phone" required  lay-verify="required" placeholder="请输入手机号码" autocomplete="off" class="layui-input">
                    </div>
                  </div>
              </div>
              <div class="center">
                <button type="button" lay-filter="btnSubmit" class="layui-btn" lay-submit></button>
              </div>
              <div class="right">
                <h2>您家的装修预算为<strong>173389</strong>元</h2>
                <div class="item">材料费：<strong>1234</strong>元</div> 
                <div class="item">人工费：<strong>1234</strong>元</div>
                <div class="item">设计费：<strong>2345</strong>元</div>
                <div class="item">质检费：<strong>6543</strong>元</div>
              </div>
            </form>
            </div>
          <% } %>
        </div>
      </div>
    <% } %>
    <%include footer.ejs%> 
    <script src="/javascripts/home.js"></script>